<form name="pay-form" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
       
        
        var payForm = document.forms['pay-form'];
        
        var payBtn = $('.btn-pay');
        // When dialog confirm clicked
       

        
        
        
        payBtn.click(function (e) {
          e.preventDefault();
          var motobikeId = $(this).data('id');
          payForm.action = '/cart/' + motobikeId + '/pay?_method=PATCH';
          
          payForm.submit();
          console.log('click');
          
          
        });

        
    });
</script>
